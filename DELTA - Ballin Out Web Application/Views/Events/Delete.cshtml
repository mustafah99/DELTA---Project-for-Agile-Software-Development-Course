@model DELTA___Ballin_Out_Web_Application.Models.Events

@{
    ViewData["Title"] = "Delete";
}

<body style="background: url('@Html.DisplayFor(model => model.EventImage)') no-repeat center center fixed; background-size: cover;">
</body>

<div style="position: absolute; z-index: -1; top: 0; width: 100%; height: 100%; left: 0; opacity: 0.9; background-image: linear-gradient(to bottom right, #192347, #e65177);"></div>

<h1 style="padding: 20px; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase;">Delete</h1>

<h3 style="padding: 20px; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase;">Are you sure you want to delete this event?</h3>
<div style="letter-spacing: 2px; padding: 20px; color: white; text-align: left; font-weight: lighter; text-transform: uppercase;">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class="col-sm-2">
            Event Image
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventImage)
        </dd>
        <dt class="col-sm-2">
            Event Location
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventLocation)
        </dd>
        <dt class="col-sm-2">
            Event Description
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDescription)
        </dd>
        <dt class="col-sm-2">
            Event Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input class="nav-link" style="display: inline-block; margin-right: 10px; text-align: center; border-radius: 5px; border: none; color: white; letter-spacing: 15px; font-weight: 500; text-transform: uppercase; text-decoration: none; background-color: #dc4f75; width: 220px;" type="submit" value="Delete" class="btn btn-danger" /> |
        <a class="nav-link" style="display: inline-block; text-decoration: none; text-shadow: 1px 1px 8px black; color: white; letter-spacing: 15px; font-weight: lighter; text-transform: uppercase;" asp-action="Index">Back to List</a>
    </form>
</div>
