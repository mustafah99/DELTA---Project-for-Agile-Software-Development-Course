@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<body style="background-image: linear-gradient(to bottom right, #192347, #e65177);">
</body>

<h1 style="padding-top: 100px; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase; text-decoration: none;">@ViewData["Title"]</h1>

<div style="color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase; text-decoration: none;">
    <div>
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">

            <h4 style="color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase; text-decoration: none;">Create a new account</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input style="width: 500px; margin: 0 auto;" asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Input.Password"></label>
                <input style="width: 500px; margin: 0 auto;" asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div>
                <label style="padding-top: 20px;" asp-for="Input.ConfirmPassword"></label>
                <input style="width: 500px; margin: 0 auto;" asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button style="margin-top: 30px; border: none; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase; text-decoration: none; background-color: #dc4f75; width: 250px;" type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
