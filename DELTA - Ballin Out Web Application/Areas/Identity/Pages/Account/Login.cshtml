@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<body style="background-image: linear-gradient(to bottom right, #192347, #e65177);"></body>

<h1 style="padding-top: 100px; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase; text-decoration: none;">@ViewData["Title"]</h1>
<div style=" color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase; text-decoration: none;">
    <div>
        <section>
            <form id="account" method="post">
                <hr/>
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input placeholder="Enter your email" style="width: 500px; margin: 0 auto;" asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Input.Password"></label>
                    <input placeholder="Enter your password" style="width: 500px; margin: 0 auto;" asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe" />
                            Remember Me
                        </label>
                    </div>
                </div>
                <div class="form-group">
                    <button style="border: none; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase; text-decoration: none; background-color: #dc4f75; width: 250px; " type="submit" class="btn btn-primary">Log in</button>
                </div>
                <div class="form-group">
                    <p>
                        <a class="nav-link" style="display: inline-block; color: white; text-decoration: none;" id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                    <p>
                        <a class="nav-link" style="display: inline-block; color: white; text-decoration: none;" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                    </p>
                    <p>
                        <a class="nav-link" style="display: inline-block; color: white; text-decoration: none;" id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                    </p>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
