@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<body style="background-image: linear-gradient(to bottom right, #192347, #e65177);">
</body>

<h1 style="padding-top: 100px; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase;">@ViewData["Title"]</h1>
<h4 style="padding: 20px; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase;">Enter your email</h4>
<hr />
<div style="color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase;">
    <div>
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div>
                <label asp-for="Input.Email"></label>
                <input style="width: 500px; margin: 0 auto;" asp-for="Input.Email" class="form-control" />
            </div>
            <button style="border: none; margin-top: 20px; color: white; letter-spacing: 15px; text-align: center; font-weight: lighter; text-transform: uppercase; text-decoration: none; background-color: #dc4f75; width: 250px; " type="submit" class="btn btn-primary">Submit</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
